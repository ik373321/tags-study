 <% if user_signed_in? %>
      <div class="row flex-nowrap justify-content-between align-items-center">
        　 <div class="col-4 pt-1">
         <%= link_to "マイページ", "/users/#{current_user.id}" %>
        　 </div>
           <div class="col-4 text-center">
              <a><%= link_to '投稿する',  new_tweet_path, class: "btn btn-sm btn-outline-secondary" %></a> 
            </div>
           
            
            <div class="col-4 d-flex justify-content-end align-items-center">
             　
               <a><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-sm btn-outline-secondary" %></a> 
            </div>
        </div>
          <%else%>
       <div class="row flex-nowrap justify-content-between align-items-center">
        　 <div class="col-4 pt-1">
           <a><%= link_to '新規登録',  new_user_registration_path, class: "btn btn-sm btn-outline-secondary"%> </a> 
        　 </div>
           <div class="col-4 text-center">
             <a class="blog-header-logo text-dark"></a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
             　 <a class="link-secondary" href="#" aria-label="Search">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"/><path d="M21 21l-5.2-5.2"/></svg>
              　</a>
               <a><%= link_to 'ログイン', new_user_session_path, class: "btn btn-sm btn-outline-secondary" %></a> 
            </div>
        </div>
         <%end%>

 <% if @tweet.length !=0 %>
 <%= link_to 'トップページへ戻る', root_path %>
<% @tweet.each do |tweet| %>
 <li class='list'>
<div class="card text-dark bg-light mb-3" style="max-width: 180rem;">
  <div class="card-header">
   <%= tweet.memo %>
  </div>
</div>
<p class="card-text">    
            <%tweet.tags.each do |tag| %>
              <a>＃ <%= tag.tag_name %></a>
            <%end%>
          </p>
  </div>
 </li>
  <%end%>

<% else %>
  該当する投稿はありません
<% end %>
<br>
<%= link_to 'トップページへ戻る', root_path %>